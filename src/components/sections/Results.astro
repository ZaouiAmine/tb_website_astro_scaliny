---

<section id="results" class="py-16 md:py-20 px-4 md:px-6" style="background-color: #FBFBFC;">
	<div class="max-w-7xl mx-auto">
		<!-- Top Heading Section -->
		<div class="text-center mb-12 md:mb-16">
			<Badge class="mb-4 md:mb-6">
				CASE STUDIES
			</Badge>
			<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 md:mb-6 leading-tight">Real Results, Real Growth</h2>
			<p class="text-gray-600 text-base md:text-lg max-w-3xl mx-auto leading-relaxed">
				We measure success in numbers. Here's what our partners have achieved.
			</p>
		</div>
		
		<!-- Key Metrics Row -->
		<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-12 md:mb-16">
			{metrics.map((metric) => (
				<div class="rounded-lg p-6 border border-gray-200 shadow-sm text-center relative" style="background-color: rgba(49, 144, 106, 0.1);">
					<div class="w-10 h-10 rounded-lg mb-4 mx-auto flex items-center justify-center" style="background-color: rgba(49, 144, 106, 0.2);">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#31906A" class="w-5 h-5">
							<path stroke-linecap="round" stroke-linejoin="round" d={metric.icon} />
						</svg>
					</div>
					<div class="text-2xl md:text-3xl font-bold text-gray-900 mb-1">{metric.value}</div>
					<div class="text-xs md:text-sm text-gray-600">{metric.label}</div>
					{metric.sublabel && <div class="text-xs text-gray-500 mt-1">{metric.sublabel}</div>}
				</div>
			))}
		</div>
		
		<!-- Central Hero Image -->
		<div class="mb-12 md:mb-16">
			<img src="/assets/images/paid-ads-dashboard.png" alt="Campaign Analytics Dashboard" class="w-full h-auto rounded-2xl shadow-lg" />
		</div>
		
		<!-- Case Study Specifics -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
			{caseStudies.map((study) => (
				<Card>
					<div class="mb-3">
						<span class="px-3 py-1 rounded-full text-xs font-semibold" style="background-color: rgba(49, 144, 106, 0.1); color: #31906A;">{study.category}</span>
					</div>
					<h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-3">{study.title}</h3>
					<p class="text-sm md:text-base text-gray-600 mb-5 leading-relaxed">
						{study.description}
					</p>
					<div class="pt-5 border-t border-gray-200">
						<div class="flex items-center justify-between gap-2 md:gap-4">
							{study.metrics.map((metric) => (
								<div class="text-center flex-1">
									<div class="text-sm md:text-base font-bold mb-1" style="color: #31906A;">{metric.value}</div>
									<div class="text-xs text-gray-600">{metric.label}</div>
								</div>
							))}
						</div>
					</div>
				</Card>
			))}
		</div>
	</div>
</section>
