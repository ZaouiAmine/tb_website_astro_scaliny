---
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';

const testimonials = [
	{
		name: 'Ahmed B.',
		role: 'CEO, TechSolutions DZ',
		text: 'Lead generation increased by 300% in 4 months. SCALINY\'s data-driven approach transformed our marketing strategy.',
		initial: 'A'
	},
	{
		name: 'Yasmine K.',
		role: 'Founder, Fashion Store',
		text: 'Optimized our COD funnel and achieved 10x more orders. Their understanding of the Algerian market is unmatched.',
		initial: 'Y'
	},
	{
		name: 'Karim M.',
		role: 'Marketing Director, Real Estate',
		text: 'SCALINY built complete systems for growth. From strategy to execution, they delivered results that exceeded our expectations.',
		initial: 'K'
	},
	{
		name: 'Nadia R.',
		role: 'Owner, Beauty Brand',
		text: 'Tripled our engagement rates through their video content strategy. The creative team understands our brand perfectly.',
		initial: 'N'
	},
	{
		name: 'Sofiane H.',
		role: 'CEO, B2B Services',
		text: 'Generated 50+ qualified leads in the first month. Their B2B expertise and LinkedIn strategy delivered immediate results.',
		initial: 'S'
	},
	{
		name: 'Lina D.',
		role: 'E-commerce Manager',
		text: 'Transparent reporting and quick responses. The team is always available and keeps us informed every step of the way.',
		initial: 'L'
	}
];
---

<section id="testimonials" class="py-16 md:py-20 px-4 md:px-6" style="background-color: #FBFBFC;">
	<div class="max-w-7xl mx-auto">
		<!-- Header Section -->
		<div class="text-center mb-12 md:mb-16">
			<Badge class="mb-4 md:mb-6">
				TESTIMONIALS
			</Badge>
			<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 md:mb-6 leading-tight">Trusted by Growing Businesses</h2>
			<p class="text-base md:text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
				Hear from our partners who have scaled their businesses with SCALINY.
			</p>
		</div>
		
		<!-- Testimonial Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{testimonials.map((testimonial) => (
				<Card class="relative">
					<div class="flex items-start justify-between mb-4">
						<div class="flex gap-1">
							{[...Array(5)].map(() => (
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#31906A" class="w-4 h-4">
									<path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
								</svg>
							))}
						</div>
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="#d1d5db" class="w-10 h-10">
							<path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
						</svg>
					</div>
					<p class="text-sm md:text-base text-gray-700 mb-6 leading-relaxed">
						{testimonial.text}
					</p>
					<div class="flex items-center gap-3">
						<div class="w-10 h-10 rounded-full flex items-center justify-center text-white font-bold text-sm" style="background-color: #31906A;">{testimonial.initial}</div>
						<div>
							<div class="font-semibold text-gray-900 text-sm">{testimonial.name}</div>
							<div class="text-xs text-gray-600">{testimonial.role}</div>
						</div>
					</div>
				</Card>
			))}
		</div>
	</div>
</section>
