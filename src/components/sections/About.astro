---
import Badge from '../ui/Badge.astro';
import { Image } from 'astro:assets';
import agencyWorkspaceImage from '../../assets/images/agency-workspace.png';
---

<section id="about" class="py-16 md:py-20 px-4 md:px-6" style="background-color: #FBFBFC;">
	<div class="max-w-7xl mx-auto">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center">
			<!-- Left Side: Visuals -->
			<div class="relative">
				<Image
					src={agencyWorkspaceImage}
					alt="Professional office environment"
					width={800}
					height={600}
					format="webp"
					loading="lazy"
					class="w-full h-auto rounded-2xl shadow-lg"
				/>
				<!-- Floating Badge -->
				<div class="absolute -bottom-4 -right-4 bg-white rounded-lg px-4 py-3 shadow-xl border border-gray-200">
					<div class="text-sm font-bold text-gray-900">5+ Years of Experience</div>
				</div>
			</div>
			
			<!-- Right Side: Text & Features -->
			<div>
				<!-- Section Tag -->
				<Badge class="mb-4 md:mb-6">
					ABOUT SCALINY
				</Badge>
				
				<!-- Headline -->
				<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 md:mb-6 leading-tight">Your Strategic Growth Partner</h2>
				
				<!-- Description -->
				<p class="text-base md:text-lg text-gray-600 mb-8 leading-relaxed">
					SCALINY is a performance-driven agency for the Algerian digital market, combining creativity and data science for B2B, e-commerce, and high-ticket brands.
				</p>
				
				<!-- Core Values -->
				<div class="space-y-4 mb-8">
					<div class="flex items-start gap-3">
						<div class="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(49, 144, 106, 0.1);">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#31906A" class="w-5 h-5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
							</svg>
						</div>
						<div>
							<h3 class="font-bold text-gray-900 mb-1">Performance-First</h3>
							<p class="text-sm text-gray-600">Decisions backed by data.</p>
						</div>
					</div>
					
					<div class="flex items-start gap-3">
						<div class="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(49, 144, 106, 0.1);">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#31906A" class="w-5 h-5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
							</svg>
						</div>
						<div>
							<h3 class="font-bold text-gray-900 mb-1">Trust & Transparency</h3>
							<p class="text-sm text-gray-600">Real-time reporting and honest assessments.</p>
						</div>
					</div>
					
					<div class="flex items-start gap-3">
						<div class="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(49, 144, 106, 0.1);">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#31906A" class="w-5 h-5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18 9 11.25l4.306 4.306a11.95 11.95 0 0 1 5.814-5.518l2.74-1.22m0 0-5.94-2.281m5.94 2.28-2.28 5.941" />
							</svg>
						</div>
						<div>
							<h3 class="font-bold text-gray-900 mb-1">Continuous Growth</h3>
							<p class="text-sm text-gray-600">Constant optimization.</p>
						</div>
					</div>
				</div>
				
				<!-- Checklist -->
				<div class="grid grid-cols-1 md:grid-cols-2 gap-3">
					<div class="flex items-start gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="#31906A" class="w-5 h-5 flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
						</svg>
						<span class="text-sm text-gray-700">Deep understanding of the Algerian market.</span>
					</div>
					<div class="flex items-start gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="#31906A" class="w-5 h-5 flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
						</svg>
						<span class="text-sm text-gray-700">Expertise in COD and e-commerce funnels.</span>
					</div>
					<div class="flex items-start gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="#31906A" class="w-5 h-5 flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
						</svg>
						<span class="text-sm text-gray-700">Multilingual campaigns (Arabic, French, English).</span>
					</div>
					<div class="flex items-start gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="#31906A" class="w-5 h-5 flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
						</svg>
						<span class="text-sm text-gray-700">Local payment and delivery optimization.</span>
					</div>
					<div class="flex items-start gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="#31906A" class="w-5 h-5 flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
						</svg>
						<span class="text-sm text-gray-700">Dedicated account management.</span>
					</div>
					<div class="flex items-start gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="#31906A" class="w-5 h-5 flex-shrink-0 mt-0.5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
						</svg>
						<span class="text-sm text-gray-700">Transparent weekly reporting.</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
