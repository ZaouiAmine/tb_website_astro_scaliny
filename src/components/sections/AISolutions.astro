---
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import Button from '../ui/Button.astro';
import { Image } from 'astro:assets';
import aiAgentsImage from '../../assets/images/ai-agents.png';
---

<section id="ai-solutions" class="py-12 md:py-20 px-4 md:px-6" style="background-color: #1A1F2E;">
	<div class="max-w-7xl mx-auto">
		<!-- Header & Hero Section -->
		<div class="text-center mb-10 md:mb-16">
			<Badge class="mb-4 md:mb-6">
				PREMIUM SERVICE
			</Badge>
			<h2 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-white mb-4 md:mb-6 leading-tight px-2">AI Business Agents for Smarter Growth</h2>
			<p class="text-gray-300 text-base md:text-lg lg:text-xl max-w-4xl mx-auto leading-relaxed px-2">
				Intelligent business assistants that combine AI capabilities with human expertise. Fully customized systems designed for worldwide marketsâ€”not chatbots, but strategic AI + human solutions that work around the clock.
			</p>
		</div>
		
		<!-- Hero Image -->
		<div class="mb-12 md:mb-20">
			<Image
				src={aiAgentsImage}
				alt="AI Business Agents"
				width={1200}
				height={600}
				format="webp"
				loading="lazy"
				class="w-full h-auto rounded-xl md:rounded-2xl"
				style="box-shadow: 0 0 30px rgba(49, 144, 106, 0.3);"
			/>
		</div>
		
		<!-- Core Service Pillars -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 mb-12 md:mb-20">
			<!-- AI Sales & Chat Agents -->
			<Card variant="dark" class="md:p-8">
				<div class="w-12 h-12 md:w-14 md:h-14 rounded-lg mb-4 md:mb-6 flex items-center justify-center" style="background-color: rgba(49, 144, 106, 0.2);">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#31906A" class="w-6 h-6 md:w-7 md:h-7">
						<path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
					</svg>
				</div>
				<div class="flex items-center gap-2 mb-4 md:mb-6">
					<h3 class="text-xl md:text-2xl font-bold text-white leading-tight">AI Sales & Chat Agents</h3>
					<span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded">Coming Soon</span>
				</div>
			</Card>
			
			<!-- AI Voice Agents -->
			<Card variant="dark" class="md:p-8">
				<div class="w-12 h-12 md:w-14 md:h-14 rounded-lg mb-4 md:mb-6 flex items-center justify-center" style="background-color: rgba(49, 144, 106, 0.2);">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#31906A" class="w-6 h-6 md:w-7 md:h-7">
						<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
					</svg>
				</div>
				<div class="flex items-center gap-2 mb-4 md:mb-6">
					<h3 class="text-xl md:text-2xl font-bold text-white leading-tight">AI Voice Agents</h3>
					<span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded">Coming Soon</span>
				</div>
			</Card>
			
			<!-- AI Support & Operations Agents -->
			<Card variant="dark" class="md:p-8">
				<div class="w-12 h-12 md:w-14 md:h-14 rounded-lg mb-4 md:mb-6 flex items-center justify-center" style="background-color: rgba(49, 144, 106, 0.2);">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#31906A" class="w-6 h-6 md:w-7 md:h-7">
						<path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25" />
					</svg>
				</div>
				<div class="flex items-center gap-2 mb-4 md:mb-6">
					<h3 class="text-xl md:text-2xl font-bold text-white leading-tight">AI Support & Operations Agents</h3>
					<span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded">Coming Soon</span>
				</div>
			</Card>
		</div>
		
		<!-- Business Models Section -->
		<div class="mb-12 md:mb-20">
			<h3 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white text-center mb-8 md:mb-12 leading-tight px-2">Built for Your Business Model</h3>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
				<div class="rounded-lg p-6 md:p-8 border" style="background-color: rgba(49, 144, 106, 0.1); border-color: rgba(49, 144, 106, 0.3);">
					<h4 class="text-lg md:text-xl font-bold text-white mb-3 md:mb-4 leading-tight">E-commerce & COD</h4>
					<p class="text-sm md:text-base text-gray-300 leading-relaxed">Automate order confirmations, delivery inquiries, and payment follow-ups for Cash-on-Delivery businesses.</p>
				</div>
				<div class="rounded-lg p-6 md:p-8 border" style="background-color: rgba(49, 144, 106, 0.1); border-color: rgba(49, 144, 106, 0.3);">
					<h4 class="text-lg md:text-xl font-bold text-white mb-3 md:mb-4 leading-tight">Service & Appointments</h4>
					<p class="text-sm md:text-base text-gray-300 leading-relaxed">Handle booking requests, reminders, and customer inquiries for service-based companies.</p>
				</div>
				<div class="rounded-lg p-6 md:p-8 border" style="background-color: rgba(49, 144, 106, 0.1); border-color: rgba(49, 144, 106, 0.3);">
					<h4 class="text-lg md:text-xl font-bold text-white mb-3 md:mb-4 leading-tight">B2B & High-Ticket</h4>
					<p class="text-sm md:text-base text-gray-300 leading-relaxed">Qualify complex leads, schedule consultations, and manage multi-touch sales processes.</p>
				</div>
			</div>
		</div>
		
		<!-- Benefit Tags & Footer CTA -->
		<div class="text-center">
			<div class="flex flex-wrap justify-center gap-3 md:gap-4 mb-8 md:mb-10">
				<Badge variant="outline" class="px-4 py-2 inline-flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
						<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5 10.5 6.75 14.25 10.5 21 3.75M3.75 19.5h16.5a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 20.25 4.5H3.75A2.25 2.25 0 0 0 1.5 6.75v10.5A2.25 2.25 0 0 0 3.75 19.5Z" />
					</svg>
					<span>Faster response times</span>
				</Badge>
				<Badge variant="outline" class="px-4 py-2 inline-flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
						<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
					</svg>
					<span>Fewer lost leads</span>
				</Badge>
				<Badge variant="outline" class="px-4 py-2 inline-flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
						<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
					</svg>
					<span>Better lead qualification</span>
				</Badge>
				<Badge variant="outline" class="px-4 py-2 inline-flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
						<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
					</svg>
					<span>Reduced team workload</span>
				</Badge>
			</div>
			
			<p class="text-lg md:text-xl lg:text-2xl text-white mb-6 md:mb-8 max-w-3xl mx-auto leading-relaxed px-2">
				Ready to upgrade your sales and support systems with intelligent AI agents tailored to your business?
			</p>
			
			<div class="flex justify-center">
				<Button size="lg" disabled style="opacity: 0.6; cursor: not-allowed;">
					Request an AI Agent Audit
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
						<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
					</svg>
				</Button>
			</div>
		</div>
	</div>
</section>
