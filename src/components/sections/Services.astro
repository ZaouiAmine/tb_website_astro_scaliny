---

<section id="services" class="py-16 px-4 md:px-6" style="background-color: #FBFBFC;">
	<div class="max-w-7xl mx-auto">
		<!-- Top Section -->
		<div class="text-center mb-12">
			<Badge class="mb-4">
				OUR SERVICES
			</Badge>
			<h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Everything You Need to Scale</h2>
			<p class="text-gray-600 text-lg max-w-3xl mx-auto">
				Full-stack performance marketing and growth solutions tailored for worldwide markets. We provide everything you need to scale your business effectively.
			</p>
		</div>
		
		<!-- Services Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{services.map((service) => (
				<Card>
					<div class="w-12 h-12 rounded-lg mb-4 flex items-center justify-center transition-transform duration-300 hover:scale-110" style="background-color: rgba(49, 144, 106, 0.2);">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#31906A" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d={service.icon} />
						</svg>
					</div>
					<div class="flex items-center gap-2 mb-2">
						<h3 class="text-xl font-bold text-gray-900">{service.title}</h3>
						{service.comingSoon && (
							<span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded">Coming Soon</span>
						)}
					</div>
					<p class="text-gray-600 mb-4">{service.description}</p>
					<Image
						src={service.image}
						alt={service.imageAlt}
						width={400}
						height={192}
						format="webp"
						loading="lazy"
						class="w-full h-48 object-cover rounded-lg mb-4"
					/>
					<div class="flex flex-wrap gap-2 mb-4">
						{service.tags.map((tag) => (
							<span class="px-3 py-1 bg-gray-200 text-gray-700 text-xs rounded">{tag}</span>
						))}
					</div>
					<a href={service.link || '#services'} class="text-sm font-semibold inline-flex items-center gap-2" style="color: #31906A;">
						{service.title === 'AI Business Agents' ? 'Explore service' : 'Learn more'}
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
							<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
						</svg>
					</a>
				</Card>
			))}
		</div>
	</div>
</section>
