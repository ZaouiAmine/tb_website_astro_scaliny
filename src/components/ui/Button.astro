---
interface Props {
	variant?: 'primary' | 'secondary' | 'outline';
	size?: 'sm' | 'md' | 'lg';
	href?: string;
	class?: string;
}

const { 
	variant = 'primary', 
	size = 'md',
	href,
	class: className = ''
} = Astro.props;

const baseClasses = 'flex items-center justify-center gap-2 rounded-xl transition-all duration-300 font-bold';
const variantClasses = {
	primary: 'text-white hover:scale-105 hover:shadow-lg',
	secondary: 'bg-gray-800 hover:bg-gray-700 text-white',
	outline: 'border-2 border-gray-600 hover:border-gray-400 text-white hover:scale-105'
};
const sizeClasses = {
	sm: 'px-6 py-3 text-sm',
	md: 'px-6 md:px-10 py-3 md:py-4 text-sm md:text-base',
	lg: 'px-8 py-4 text-base lg:text-lg'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
const style = variant === 'primary' ? 'background-color: #31906A; box-shadow: 0 0 15px rgba(49, 144, 106, 0.5);' : '';
const bgStyle = variant === 'outline' ? 'background-color: #0F1419;' : '';

const Tag = href ? 'a' : 'button';
---

<Tag href={href} class={classes} style={variant === 'primary' ? style : bgStyle}>
	<slot />
</Tag>
